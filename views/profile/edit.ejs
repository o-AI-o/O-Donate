<!DOCTYPE ejs>
<html lang="en">
<head>
    <title>Edit Profile | O-Donate</title>
    <%- include("../partials/header") %>
    <style>
      .wrap {
        margin-top: 4.5rem;
      }

      .img-fluid {
        width: 350px;
        height: 350px;
      }

      .btn-file {
        position: relative;
        overflow: hidden;
      }

      .btn-file input[type=file] {
        position: absolute;
        top: 0;
        right: 0;
        min-width: 100%;
        min-height: 100%;
        font-size: 100px;
        text-align: right;
        filter: alpha(opacity=0);
        opacity: 0;
        outline: none;   
        cursor: inherit;
        display: block;
      }

      .btn-custom {
        background: rgb(92, 173, 173);
        color: #ffffff;
        width: 100%;
        margin-top: -55px;
        padding: 1rem 0rem;
        border-radius: 0%;
      }

      .btn-custom:hover {
        background: rgb(58, 175, 130);
        color: #ffffff;
      }

      .input-group-prepend span {
          background: rgb(92, 173, 173);
          color: #ffffff;
      }

      .form-button{
            background:rgb(92, 173, 173);
            border: 1px solid #ddd;
            color: #ffffff;
            padding: 10px;
            width: 50%;
            text-transform: uppercase;
        }

        .form-button:hover{
            background: rgb(58, 175, 130);
        }

        .form-header{
            text-align: center;
            margin-bottom : 2rem;
        }
        
    </style>
</head>
<body>
    <%- include("../partials/navbar") %>

    <div class="container">
    <form lass="main-form" action="/profile/edit" method="POST"></form>
    <div class="wrap">
    <div class="row">
        <div class="col-md-12 pb-3">
          <h1>Edit Your Profile</h1>
        </div>
        
        <div class="col-md-4">
          <div class="profile-img">
            <img class="img-fluid" src="https://i.pinimg.com/564x/90/dd/0a/90dd0a24c501b281fb1aedde1776ff0c.jpg" alt=""/>
            <span class="btn btn-custom btn-file">
              Edit Profile Picture <input type="file" class="form-control" name="Image" accept="image/*" required>
            </span>
          </div>
        </div>

          <div class="col-md-5">
            <div class="form-group">
              <label for="new-username">Username :</label>
              <input class="form-control" type="text" name="username" placeholder="Enter Username" value="<%= currentUser.username %>" required>
            </div>

            <div class="form-group">
              <label for="new-username">First Name :</label>
              <input class="form-control" type="text" name="firstname" placeholder="Enter Username" value="<%= currentUser.firstname %>" required>
            </div>

            <div class="form-group">
              <label for="new-username">Last Name :</label>
              <input class="form-control" type="text" name="lastname" placeholder="Enter Username" value="<%= currentUser.lastname %>" required>
            </div>

            <div class="form-group">
              <label for="new-username">E-mail :</label>
              <input class="form-control" type="text" name="email" placeholder="Enter Username" value="<%= currentUser.email %>" required>
            </div>

            <div class="text-center">
              <div class="form-group">
                <button style="margin-top: 1.25rem; border-radius: 5px;" class="form-button" type="submit">Save Changed</button>
              </div>
            </div>
          
        </div>
      </form>
    </div>
    </div>
    </div>
              

              

              
</body>
</html>