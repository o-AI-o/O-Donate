<!DOCTYPE ejs>
<html lang="en">
<head>
    <title>All Category | O-Donate</title>
    <%- include("../partials/header") %>
    <style>
        img {
            width: 100%;
            height: 250px;
        }

        .card-body {
            padding-bottom: 20px;
            text-align: center;
        }

        .card-body a {
            background-color: rgb(92, 173, 173);
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 2px;
        }
    
        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .card img {
            height: 300px;
        }
    </style>
</head>
<body>
    <%- include("../partials/navbar") %>
    <div class="container" style="margin: 25px auto; padding-top: 50px;">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Donation Category</h1>
                <p class="lead"> With over thousand Fusdraisers in our database </p>
            </div>
        </div>

        <div class="row">
            <% category.forEach(function(ca){ %>
            <div class="col-md-4 mt-4">
                <img src="<%= ca.catg_pic %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <a href="/fundraiser/category/<%= ca.catg_name %>"><%= ca.catg_name %> ></a>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>