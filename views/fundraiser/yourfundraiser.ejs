<!DOCTYPE ejs>
<html lang="en">
<head>
    <title><%= cname %> | O-Donate</title>
    <%- include("../partials/header") %>
    <style>
        .img-thumbnail {
            padding-bottom: 20px;
            text-align: left;
        }
   
        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .card-body a {
            background-color: rgb(92, 173, 173);
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 2px;
        }
        
    </style>
</head>
<body>
    <%- include("../partials/navbar") %>
    <div class="container" style="margin: 25px auto; padding-top: 50px;">
    <div class="container">
    <div class="row">
    <% cFundraiser.forEach(function(cf){ %>
        <div class="col-xs-12 col-lg-4">
            <div class="img-thumbnail">
                <img class="card-img-top" src=<%= "/uploads/fundraisers/" + cf.fund_image %> alt="Card image cap">
                <h2 style="padding-top: 15px;" class="card-title"><%= cf.fund_name %></h2>
                <p class="card-text"><%= cf.fund_title %></p>
                  
                <div class="progress">
                    <div class="progress-bar bg-success" style="width:<%= (cf.fund_moneynow / cf.fund_moneytraget) * 100 %>%"></div>
                </div>
                <h6>$<%= cf.fund_moneynow %> raised of $<%= cf.fund_moneytraget %></h6> 

                <div class="card-body" style="text-align: center;">
                    <a href="/fundraiser/id/<%= cf._id %>">More Detail</a>
                </div>
            </div>
        </div>
    <% }); %>
    </div>
    </div> 
    </div>
    <%- include("../partials/footer") %>
</body>
</html>