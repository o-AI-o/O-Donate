<!DOCTYPE ejs>
<html lang="en">
<head>
    <title>Add Your Fundraiser | O-Donate</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <%- include("../partials/header") %>
    <link rel="stylesheet" href="/stylesheets/add.css">
</head>
<body>
    <%- include("../partials/navbar") %>
    <div class="container">
        <div class="wrap">
            <form class="main-form" action="/fundraiser/addFundraiser" method="POST" enctype="multipart/form-data">
                <div class="form-header">
                    <h3 style="font-size: xx-large;">Add Your Fundraiser</h3>
                </div>

                <div class="row">
                    <div class="col-md-12 pb-4">
                        <div class="profile-img">
                            <img class="img-fluid rounded-top" src="https://i.pinimg.com/564x/90/dd/0a/90dd0a24c501b281fb1aedde1776ff0c.jpg" alt=""/>
                            
                            <span class="btn btn-custom btn-file">
                              Add Photo <input type="file" class="form-control" name="Image" accept="image/*" required>
                            </span>
            
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="category"><span class="hidden-xs">Category :</span> </label>
                    <div class="form-inline">
                        <select name="category" class="form-control" style="width:45%">
                            <option>Select</option>
                            <% category.forEach(function(ca){ %>
                            <option value="<%= ca.catg_name %>"><%= ca.catg_name %></option>
                            <% }); %>
                        </select>
                        
                    </div>
                </div>

                <div class="form-group">
                    <label for="name">Name : </label>
                    <input type="text" class="form-control" placeholder="Fundriaser name" name="fname" required>
                </div>

                <div class="form-group">
                    <label for="topic">Topic : </label>
                    <input type="text" class="form-control" placeholder="Fundriaser Topic" name="title" required>
                </div>
        
                <div class="form-group">
                    <label for="discription">Description : </label>
                    <textarea type="text" class="form-control" placeholder="explain about your topic" name="description" row="5" required></textarea>
                </div>
        
                <div class="form-group">
                    <label for="target">Target : </label>
                    <input type="number" class="form-control" placeholder="Amount of money" name="target" required>
                </div>
         
                <div class="form-group">
                    <button style="margin-top: 1.25rem;" class="form-button" type="submit">Add Fundraiser</button>
                </div>                       
            </form>
        </div>
    </div>
</body>
</html>