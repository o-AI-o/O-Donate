<!DOCTYPE ejs>
<html lang="en">
<head>
    <title>Add Your Fundraiser | O-Donate</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <%- include("../partials/header") %>
    <script src="/scripts/imagePreview.js" type="text/javascript" defer></script>
    <script src="/scripts/register.js" type="text/javascript" defer></script>
<style>
.img-fluid {
    width: 100%;
    height: 400px;
}

.img-fluid {
    width: 100%;
    height: 400px;
}

.btn-file {
    position: relative;
    overflow: hidden;
}

.btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;   
    cursor: inherit;
    display: block;
}

.btn-custom {
    background: rgb(92, 173, 173);
    color: #ffffff;
    width: 100%;
    margin-top: -55px;
    padding: 1rem 0rem;
    border-radius: 0%;
}

.btn-custom:hover {
    background: rgb(58, 175, 130);
    color: #ffffff;
}

.input-group-prepend span {
      background: rgb(92, 173, 173);
      color: #ffffff;
}
</style>
</head>
<body>
    <%- include("../partials/navbar") %>
    <div class="container">
        <div class="wrap">
            <form class="main-form" onsubmit="return checkFundraiser()" action="/fundraiser/addFundraiser" method="POST" enctype="multipart/form-data" autocomplete="off">
                <div class="form-header">
                    <h3 style="font-size: xx-large;">Add Your Fundraiser</h3>
                </div>

                <div class="row">
                    <div class="col-md-12 pb-4">
                        <div class="profile-img">
                            <img class="img-fluid rounded-top" id="imgField" src="https://i.pinimg.com/564x/90/dd/0a/90dd0a24c501b281fb1aedde1776ff0c.jpg" alt=""/>
                            
                            <span class="btn btn-custom btn-file">
                                Add Photo <input type="file" class="form-control" id="imgPreview" name="Image" accept="image/*">
                            </span>
            
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="category"><span class="hidden-xs">Category :</span> </label>
                    <div class="form-inline">
                        <select id="Category" name="category" class="form-control" style="width:45%">
                            <option value="0">Select</option>
                            <% category.forEach(function(ca){ %>
                            <option value="<%= ca.catg_name %>"><%= ca.catg_name %></option>
                            <% }); %>
                        </select>
                        
                    </div>
                </div>

                <div class="form-group">
                    <label for="name">Name : </label>
                    <input type="text" id="FName" class="form-control" placeholder="Fundriaser name" name="fname">
                </div>

                <div class="form-group">
                    <label for="topic">Topic : </label>
                    <input type="text" id="FTopic" class="form-control" placeholder="Fundriaser Topic" name="title">
                </div>
        
                <div class="form-group">
                    <label for="discription">Description : </label>
                    <textarea type="text" id="FDesc" class="form-control" placeholder="explain about your topic" name="description" rows="5"></textarea>
                </div>
        
                <div class="form-group">
                    <label for="target">Target : </label>
                    <input type="number" id="FTarget" class="form-control" placeholder="Amount of money" name="target">
                </div>
         
                <div class="form-group">
                    <button style="margin-top: 1.25rem;" class="form-button" type="submit">Add Fundraiser</button>
                </div>
                
                <div id="alertField" style="color: red;"></div>
            </form>
        </div>
    </div>
</body>
</html>