<!DOCTYPE ejs>
<html lang="en">
<head>
    <title>Sign Up | O-Donate</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script src="/scripts/register.js" type="text/javascript" defer></script>
    <%- include("../partials/header") %>
</head>
<body>
    <%- include("../partials/navbar") %>
    <div class="container" >
        <div class="wrap">
            <form class="main-form" onsubmit="return checkB()" action="/register/extraB" method="POST">
                <div style="padding-bottom: 0.7rem;" class="form-header">
                    <h3 style="font-size: xx-large;">Finance Information</h3>
                    <p>Fill out your credit card number</p>
                </div>

                <div class="form-group">
                    <label for="Creditnum">Card number</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-credit-card"></i></span>
                        </div>
                        <input type="text" class="form-control" id="Creditnum" name="Creditnum" placeholder="EX: 0000-0000-0000">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-7">
                        <div class="form-group">
                            <label><span class="hidden-xs">Expiration Date :</span> </label>
                            <div class="form-inline">
                                <select class="form-control" id="Month" style="width:45%">
                                    <option value="0">MM</option>
                                    <option value="1">01</option>
                                    <option value="2">02</option>
                                    <option value="3">03</option>
                                    <option value="4">04</option>
                                    <option value="5">05</option>
                                    <option value="6">06</option>
                                    <option value="7">07</option>
                                    <option value="8">08</option>
                                    <option value="9">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                                <span style="width:10%; text-align: center"> / </span>
                                <select class="form-control" id="Year" style="width:45%">
                                    <option value="0">YY</option>
                                    <option value="20">20</option>
                                    <option value="21">21</option>
                                    <option value="22">22</option>
                                    <option value="23">23</option>
                                    <option value="24">24</option>
                                    <option value="25">25</option>
                                    <option value="26">26</option>
                                    <option value="27">27</option>
                                    <option value="28">28</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label data-toggle="tooltip" title="" data-original-title="3 digits code on back side of the card">CVV : <i class="fa fa-question-circle"></i></label>
                            <input class="form-control" type="text" id="CVV">
                        </div>
                    </div>  
                </div>

                <div class="form-group">
                    <button style="margin-top: 1.25rem;" class="form-button" type="submit">Submit</button>
                </div>
                
                <div id="alertField" style="color: red;"></div>
            </form>
        </div>
    </div>
</body>
</html>